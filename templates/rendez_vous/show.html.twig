{% extends 'base.html.twig' %}

{% block title %}RendezVous{% endblock %}

{% block body %}
    <h1>RendezVous</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ rendez_vou.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ rendez_vou.date ? rendez_vou.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Heure</th>
                <td>{{ rendez_vou.heure }}</td>
            </tr>
            <tr>
                <th>Prestation</th>
                <td>{{ rendez_vou.prestation.name }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ rendez_vou.lieu }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_rendez_vous_index') }}">Retour</a>

    <a href="{{ path('app_rendez_vous_edit', {'id': rendez_vou.id}) }}">Modifier</a>

    {{ include('rendez_vous/_delete_form.html.twig') }}
{% endblock %}
